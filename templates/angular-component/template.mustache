<div class="{{#helpers.kebabCase}}{{componentName}}{{/helpers.kebabCase}}">
  <div class="{{#helpers.kebabCase}}{{componentName}}{{/helpers.kebabCase}}__header">
    <h1 class="{{#helpers.kebabCase}}{{componentName}}{{/helpers.kebabCase}}__title">{{componentName}}</h1>
    <p class="{{#helpers.kebabCase}}{{componentName}}{{/helpers.kebabCase}}__description">{{description}}</p>
  </div>

  {{#inputs}}
  <div class="{{#helpers.kebabCase}}{{componentName}}{{/helpers.kebabCase}}__inputs">
    <h3>输入属性</h3>
    {{#.}}
    <div class="input-item">
      <label>{{name}}:</label>
      <span>{{#helpers.openBrace}}{{/helpers.openBrace}}{{#helpers.openBrace}}{{/helpers.openBrace}}{{name}}{{#helpers.closeBrace}}{{/helpers.closeBrace}}{{#helpers.closeBrace}}{{/helpers.closeBrace}}</span>
      {{#description}}<small>{{description}}</small>{{/description}}
    </div>
    {{/.}}
  </div>
  {{/inputs}}

  <div class="{{#helpers.kebabCase}}{{componentName}}{{/helpers.kebabCase}}__content">
    <p>组件内容区域</p>
    <!-- TODO: 添加组件具体内容 -->
    
    {{#outputs}}
    <div class="{{#helpers.kebabCase}}{{componentName}}{{/helpers.kebabCase}}__actions">
      <h3>操作</h3>
      {{#.}}
      <button 
        class="btn btn-primary"
        (click)="on{{#helpers.pascalCase}}{{name}}{{/helpers.pascalCase}}($event)">
        触发 {{name}}
      </button>
      {{/.}}
    </div>
    {{/outputs}}
  </div>

  <div class="{{#helpers.kebabCase}}{{componentName}}{{/helpers.kebabCase}}__footer">
    <small>Generated by MCP Generator at {{#helpers.currentTime}}{{/helpers.currentTime}}</small>
  </div>
</div> 